<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xcky.mapper.JlProjectMapper">
    <select id="selectJlProjectVoByJlId" resultType="com.xcky.model.vo.JlProjectVo">
        SELECT
            id,
            name,
            `desc` descStr
        FROM
            jl_project
        WHERE
            jl_id = #{jlId}
        ORDER BY
            sort_num 
    </select>
    
    <insert id="insertProjectInfo" parameterType="com.xcky.model.req.JlProjectInfoUpdateReq"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO
            jl_project
        (
            name,
            `desc`,
            jl_id,
            sort_num
        )
        VALUES
        (
            #{name},
            #{descStr},
            #{jlId},
            #{sortNum}
        )
    </insert>

    <update id="updateProjectInfo" parameterType="com.xcky.model.req.JlProjectInfoUpdateReq">
        UPDATE
            jl_project
        SET
            name = #{name},
            `desc` = #{descStr},
            jl_id = #{jlId},
            sort_num = #{sortNum}
        WHERE
            id = #{id}
    </update>
</mapper>
